@model AdminContactViewModel

@{
    ViewData["Title"] = "Answer to contact";
}

<div class="container">
    <div class="form">

        <!-- Form itself -->
        <form method="post" name="sentMessage" class="well" >

            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.IsAnswered" />

            <div class="control-group">
                <div class="controls">
                    <p style="color: orangered;"><strong style="color: orange;">Answer to: </strong>@Model.From</p>
                    <input type="hidden" asp-for="@Model.From" />
                    <p class="help-block"></p>
                </div>
            </div>

            <div class="form-group">
                <div class="controls">
                    <p style="color: orangered;"><strong style="color: orange;">Subject: </strong>@Model.Subject</p>
                    <input type="hidden" asp-for="@Model.Subject" />
                    <p class="help-block"></p>
                </div>
            </div>

            <div class="form-group">
                <div class="controls">
                    <p style="color: orangered;"><strong style="color: orange;">Message: </strong>@Model.Message</p>
                    <input type="hidden" asp-for="@Model.Message" />
                    <p class="help-block"></p>
                </div>
            </div>

            <div class="form-group">
                <div class="controls">
                    <textarea asp-for="@Model.Respond"
                        name="Respond"
                        style="resize:none;"
                        class="form-control"
                        rows="10"
                        cols="100"
                        spellcheck="false"
                        placeholder="Your answer ..."></textarea>
                    <span asp-validation-for="@Model.Respond" class="text-danger"></span>
                </div>
            </div>
            @*<div id="success"> </div> <!-- For success/fail messages -->*@
            <button type="submit" 
                class="btn btn-primary pull-right"
                onclick="return confirm('Are you sure you want to send this respond?')">
                    Send
            </button>
            <br />
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}