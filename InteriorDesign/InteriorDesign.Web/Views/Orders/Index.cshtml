@using InteriorDesign.Infrastructure.Data.Models.DataBaseModels
@using Microsoft.AspNetCore.Identity;

@inject UserManager<ApplicationUser> userManager
@model CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<div class="card card-primary">
    <div class="card-header" style="background-color: orange;">
        <h3 class="card-title" style="margin-left: 2rem;">Create Order</h3>
        <h3 class="card-tools" style="font-size: 1.2rem; margin-right: 2rem;">
            <span>Total price: @String.Format("{0:0.00}", Model.TotalPrice).Replace(",", ".")</span> <i class="fa fa-eur" aria-hidden="true"></i>
        </h3>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Orders" asp-action="CreateOrder">
        <div class="card-body">
            <div style="display: flex; width: 100%;">
                <div style="width: 50%">
                    <div class="form-group">
                        <label asp-for="FirstName" style="margin: 0;" />
                        <input asp-for="FirstName"
                               class="form-control"
                               style="margin-inline: 2rem; width: 30vw;"
                               type="text"
                               placeholder="First name ..." />

                    </div>
                    <span asp-validation-for="FirstName" class="text-danger" style="margin-inline: 2rem;"></span>

                    <div class="form-group">
                        <label asp-for="LastName" style="margin: 0;" />
                        <input asp-for="LastName"
                               class="form-control"
                               style="margin-inline: 2rem; width: 30vw;"
                               type="text"
                               placeholder="Last name ..." />

                    </div>
                    <span asp-validation-for="LastName" class="text-danger" style="margin-inline: 2rem;"></span>

                    <div class="form-group">
                        <label asp-for="DeliveryAddress" style="margin: 0;" />
                        <textarea asp-for="DeliveryAddress"
                                  class="form-control"
                                  spellcheck="false"
                                  style="resize: none; margin-inline: 2rem; width: 30vw"
                                  rows="5"
                                  placeholder="Delivery address ...">
                        </textarea>
                        <span asp-validation-for="DeliveryAddress" class="text-danger" style="margin-inline: 2rem;"></span>
                    </div>
                </div>
                <div style="width: 50%">
                    <div class="form-group">
                        <label asp-for="Email" style="margin: 0;" />
                        <input asp-for="Email"
                               class="form-control"
                               style="margin-inline: 2rem; width: 30vw;"
                               type="email"
                               placeholder="Email ..." />
                        <span asp-validation-for="Email" class="text-danger" style="margin-inline: 2rem;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" style="margin: 0;" />
                        <input asp-for="Phone"
                               class="form-control"
                               style="margin-inline: 2rem; width: 30vw;"
                               type="tel"
                               placeholder="Phone number ..." />
                        <span asp-validation-for="Phone" class="text-danger" style="margin-inline: 2rem;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdditionalDetails" style="margin: 0;" />
                        <textarea asp-for="AdditionalDetails"
                                  class="form-control"
                                  spellcheck="false"
                                  style="resize: none; margin-inline: 2rem; width: 30vw"
                                  rows="5"
                                  placeholder="Additional details (optional) ...">
                        </textarea>
                        <span asp-validation-for="AdditionalDetails" class="text-danger" style="margin-inline: 2rem;"></span>
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="@Model.TotalPrice" />

        <div class="card-footer" style="text-align: center;">
            <input type="submit" 
                class="btn btn-success btn-flat" 
                style="margin-right: 3rem; width: 30%"
                onclick="return confirm('Are you sure you want to place this order?')" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}