@{
    ViewData["Title"] = "Application Error";
}

<div class="container text-center">
    <div>
        <span>
            <i class="fa fa-exclamation-triangle" aria-hidden="true" style="color: red; font-size: 10rem; margin-top: 5vh;"></i>
        </span>
        <div class="section-header" style="margin-top: 6vh;">
            <h2>@ViewData["Title"]</h2>
        </div>
        <p>
            Something went wrong. Please try again later.<br />
            <a asp-area=""
                asp-controller="Home"
                asp-action="Index"
                onclick="displayBusyIndicator()">
                    <strong>back to Home Page</strong>
            </a>
        </p>
    </div>
</div>