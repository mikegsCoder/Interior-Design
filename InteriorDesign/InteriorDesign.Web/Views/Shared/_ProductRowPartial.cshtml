@model ProductInfoViewModel

<tr>
    <td>
        <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-circle img-size-32 mr-2">
        @Model.ProductName
    </td>
    <td>@Model.CategoryName</td>
    <td>@Model.TypeName</td>
    <td>@Model.ModelName</td>
    <td>@Model.ColorName</td>
    <td>@String.Format("{0:0.00}", Model.ProductPrice).Replace(",", ".") <i class="fa fa-eur" aria-hidden="true"></i></td>
    <td>
        <a asp-area=""
           asp-controller="Products"
           asp-action="Product"
           asp-route-productId="@Model.Id"
           class="text-muted"
           onclick="displayBusyIndicator()">
            <i class="fa fa-search" aria-hidden="true"></i>
        </a>
    </td>
</tr>