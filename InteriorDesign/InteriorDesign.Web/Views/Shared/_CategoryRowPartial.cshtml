@model CategoryViewModel

<tr>
    <td>
        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-circle img-size-32 mr-2">
        @Model.Name
    </td>
    <td>@Model.ProductTypesCount</td>
    <td>@Model.ProductModelsCount</td>
    <td>@Model.ProductsCount</td>
    <td>
        <a asp-area=""
            asp-controller="Categories"
            asp-action="@Model.Name.Replace(" ", string.Empty)"
            class="text-muted"
            onclick="displayBusyIndicator()">
                <i class="fa fa-folder-open-o"></i>
        </a>
    </td>
</tr>